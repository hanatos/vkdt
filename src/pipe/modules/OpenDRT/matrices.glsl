// matrix definitions converted from OpenDRT via this abomination:
#if 0 //!/bin/bash
while read -r line
do
  if [[ $line == //* ]]
  then # just propagate comments onwards
    echo $line
  elif [[ $line == "" ]]
  then # skip empty lines
    continue
  else # print transposed numbers as glsl mat3
    echo -n $(echo $line | cut -f-2 -d" ")
    # remove parantheses and the function calls, leave only numbers
    vals=$(echo $line | cut -d" " -f3- | sed -e 's/(//g' | sed -e 's/)//g' | sed -e 's/make_float3x3//g' | sed -e 's/make_float3//g')
    echo -n " mat3("
    echo $vals | awk '{ for(j=1;j<=NF;j++) {
  i = ((j-1) % 3) + 1
  if(!cols[i]) { cols[i]=$j }
  else { cols[i]=cols[i] " " $j }
} }
END {
  for(i=1;i<=3;i++) printf "%s",cols[i]
}'
    echo ")"
  fi
done < matrices.txt
#endif


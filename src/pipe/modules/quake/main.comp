  { // apply glossiness texture
    ivec2 tc = ivec2(textureSize(img_tex[nonuniformEXT(m.matgl)], 0)*mod(m.st, vec2(1.0)));
    tc = clamp(tc, ivec2(0), textureSize(img_tex[nonuniformEXT(m.matgl)], 0)-1);
    float gloss = texelFetch(img_tex[nonuniformEXT(m.matgl)], tc, 0).r;

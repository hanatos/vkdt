    m.c.n = -w; // sky has no normal
    m.c.x = x + (T_MAX-1.0) * w; // sky is far away
  }
  else
  {
    if(m.flags > 0)
    { // all esoteric surfaces warp
      m.st = vec2(
          m.st.x + 0.2*sin(m.st.y*2.0 + params.cl_time * 1.0),
          m.st.y + 0.2*sin(m.st.x*2.0 + params.cl_time * 1.0));
